{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/index.ts", "src/types.ts"],
	"exclude": ["node_modules",  "build","dist", "**/*.test.ts"]
}
